<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tichu_normal_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bonzai</item>
        <item name="android:backgroundTint">@color/tichubutton_backgroundcolor_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/tichubutton_fontcolor_selector</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">@color/tichubutton_strokecolor_selector</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="tichu_toggle_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bonzai</item>
        <item name="android:backgroundTint">@color/tichutoggle_backgroundcolor_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/tichubutton_fontcolor_selector</item>
        <item name="android:textSize">32sp</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">@color/tichubutton_strokecolor_selector</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="tichu_dialog_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bonzai</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="backbutton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="srcCompat">@drawable/icon_arrow_back</item>
        <item name="android:background">@null</item>
        <item name="android:tint">?colorOnBackground</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>