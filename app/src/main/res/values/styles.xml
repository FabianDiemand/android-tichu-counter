<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ====================================================
    General Button Styles
    ===================================================== -->
    <style name="tichu_normal_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bonzai</item>
        <item name="android:backgroundTint">@color/selector_tichubutton_backgroundcolor</item>
        <item name="android:padding">@dimen/big_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selector_tichubutton_fontcolor</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">?colorOnPrimary</item>
        <item name="strokeWidth">@dimen/small_padding</item>
    </style>

    <style name="tichu_dialog_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bonzai</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="cornerRadius">@dimen/zero</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/small</item>
    </style>

    <style name="backbutton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="srcCompat">@drawable/vector_arrow_back</item>
        <item name="android:background">@null</item>
        <item name="android:tint">?colorOnBackground</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:padding">@dimen/zero</item>
    </style>

    <!-- ====================================================
    General Text Styles
    ===================================================== -->
    <style name="bonzai_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/bonzai</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="title_text" parent="bonzai_text">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:layout_marginTop">@dimen/title_margin</item>
    </style>


</resources>