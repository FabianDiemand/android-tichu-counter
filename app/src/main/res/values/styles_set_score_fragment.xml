<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tichus_teamname" parent="bonzai_text">
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="tichus_buttons_ll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tichu_toggle_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bonzai</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:padding">@dimen/big_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selector_tichubutton_fontcolor</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="cornerRadius">@dimen/zero</item>
        <item name="strokeColor">?colorOnPrimary</item>
        <item name="strokeWidth">@dimen/small</item>
    </style>
</resources>